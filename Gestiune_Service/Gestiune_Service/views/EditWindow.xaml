<Window x:Class="Gestiune_Service.views.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestiune_Service.views"
        mc:Ignorable="d"
        Title="EditWindow" Height="200" Width="500">
    <Grid Background="#FF59ADC3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="140,37,0,0" TextWrapping="Wrap" Text="Problema:" VerticalAlignment="Top" Width="94" Height="27" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="140,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Height="32" FontSize="20"><Run Text="Pret:"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="txtAddProblem" HorizontalAlignment="Left" Margin="3,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" Height="36" FontSize="16" Grid.Column="1"/>
        <TextBox x:Name="txtAddPrice" HorizontalAlignment="Left" Margin="3,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="81" Height="36" FontSize="20" Grid.Column="1"/>
        <Button x:Name="btnSave" Grid.Column="1" Content="Salvare" HorizontalAlignment="Left" Margin="140,129,0,0" VerticalAlignment="Top" Width="89" Click="btnSave_Click" Height="20"/>
        <Button x:Name="btnBack" Content="Inapoi la meniu" HorizontalAlignment="Center" Margin="0,129,0,0" VerticalAlignment="Top" Width="88" Click="btnBack_Click" Height="20"/>
    </Grid>
</Window>
